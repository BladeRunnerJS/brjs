{
  "env": {
    "node": true
  },
  "rules": {
    "quotes": [2, "single"],
    "valid-jsdoc": [2, true],
    "brace-style": [2, true],
    "semi": [2, true],
    "no-bitwise": [2, true],
    "camelcase": [2, true],
    "curly": [2, true],
    "eqeqeq": [2, "allow-null"],
    "wrap-iife": [2, true],
    "eqeqeq": [2, true],
    "strict": [2, true],
    "no-unused-vars": [2, true],
    "no-underscore-dangle": [0, false],
    "no-use-before-define": [0, false],
    "no-constant-condition": [0, false]
  }
}
