{
    "env": {
        "node": true
    },

    "rules": {
        // Possible errors
        "no-cond-assign": 2,
        "no-console": 0,
        "no-constant-condition": 0,
        "no-comma-dangle": 2,
        "no-control-regex": 2,
        "no-debugger": 2,
        "no-dupe-keys": 2,
        "no-empty": 2,
        "no-empty-class": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": 0,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-invalid-regexp": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 0, // TODO: enable with { "requireReturn": false }
        "valid-typeof": 2,

        // Best practices
        "block-scoped-var": 0,
        "complexity": 0, // TODO: enable
        "consistent-return": 2,
        "curly": [2, "all"],
        "dot-notation": 2,
        "eol-last": 2,
        "eqeqeq": [2, "smart"],
        "guard-for-in": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-div-regex": 2,
        "no-else-return": 0,
        "no-empty-label": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implied-eval": 2,
        "no-labels": 2,
        "no-iterator": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-trailing-spaces": 2,
        "no-undefined": 0,
        "no-unused-expressions": 2,
        "no-warning-comments": 0,
        "no-with": 2,
        "radix": 2,
        "wrap-iife": [2, "inside"],
        "yoda": 2,

        // Strict mode
        "no-global-strict": 0,
        "no-extra-strict": 2,
        "strict": 2,

        // Variables
        "no-catch-shadow": 0,
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-unused-vars": 0,
        "no-use-before-define": 2,

        // Node.js
        "handle-callback-err": 2,
        "no-mixed-requires": 2,
        "no-path-concat": 2,
        "no-process-exit": 2,
        "no-sync": 0,

        // Stylistic issues
        "brace-style": 0, // TODO: enable with "stroustrup" (or "1tbsp" + lots of cleanup)
        "camelcase": 2,
        "consistent-this": [2, "self"],
        "func-names": 0, // TODO: enable
        "func-style": 0,
        "max-nested-callbacks": 0,
        "new-cap": 2,
        "new-parens": 2,
        "no-nested-ternary": 2,
        "no-array-constructor": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-space-before-semi": 2,
        "no-ternary": 0,
        "no-underscore-dangle": 0,
        "no-wrap-func": 2,
        "one-var": 0,
        "quotes": [2, "single", "avoid-escape"],
        "quote-props": 0,
        "semi": [2, "always"],
        "sort-vars": 0, // TODO: enable
        "space-in-brackets": 0, // TODO: enable?
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "space-unary-word-ops": 2,
        "wrap-regex": 0,

        // Legacy
        // TODO: consider enabling some of the `max-*` rules
        "max-depth": 0,
        "max-len": 0,
        "max-params": 0,
        "max-statements": 0,
        "no-bitwise": 2,
        "no-plusplus": 0
    }
}
