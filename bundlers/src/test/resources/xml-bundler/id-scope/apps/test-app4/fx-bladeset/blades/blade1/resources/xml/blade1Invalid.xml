<?xml version="1.0" encoding="UTF-8"?>
<rendererDefinitions>

	<renderer type="caplinx.fx.text">
		<control name="caplin.control.basic.TextControl"/> 
		<downstream>
			<transform name="caplin.element.formatter.NullValueFormatter">
				<attribute name="nullValue" value=""/>
			</transform>
			<transform name="caplin.element.styler.FlashStyler">
				<attribute name="duration" value="100"/>
				<attribute name="color-up" value="purple"/>
				<attribute name="color-down" value="blue"/>
			</transform>		
		</downstream>
	</renderer>	

</rendererDefinitions>
